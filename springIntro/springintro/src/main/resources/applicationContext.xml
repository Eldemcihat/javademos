<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    <context:property-placeholder location="classpath:values.properties"/>         
    <bean id = "database" class="com.example.springintro.CustomerDal">
        <property name="connectionString" value="${database.connectionString}"></property>
   </bean>
   <bean id = "service" class="com.example.springintro.CustomerManager">
    <constructor-arg ref="database"></constructor-arg>
   </bean>
</beans>